<div id="modal-resp-consulta" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h3 class="modal-title"><strong>{{ responsavel ? 'editar' : 'novo' }}</strong> ALUNO</h3>
            </div>
            <div class="modal-body">

                <form class="responsavel">

                    <div class="form-group">
                        <label for="ipt-resp-nome" class="control-label">Nome</label>
                        <input required type="text" class="form-control" name="nome" id="ipt-resp-nome" value="{{ responsavel.nome }}">
                    </div>
                    <div class="form-group">
                        <label for="ipt-resp-telefone" class="control-label">Telefone</label>
                        <input required type="text" class="form-control" name="tel" id="ipt-resp-telefone" value="{{ responsavel.telefone }}">
                    </div>

                </form>

            </div>
            <div class="modal-footer">

                {% if responsavel %}

                    <button class="remover btn btn-danger pull-left" data-action="/ajax/cadastro/consulta/responsavel/{{ responsavel.id }}">
                        <i class="fa fa-trash-o" aria-hidden="true"></i> Remover
                    </button>
                    <button class="atualizar btn btn-primary" data-action="/ajax/cadastro/consulta/responsavel/{{ responsavel.id }}">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i> Salvar
                    </button>

                {% else %}

                    <button class="novo btn btn-success" data-action="/ajax/cadastro/consulta/responsavel">
                        <i class="fa fa-floppy-o" aria-hidden="true"></i> Salvar
                    </button>

                {% endif %}

            </div>
        </div>
    </div>
</div>