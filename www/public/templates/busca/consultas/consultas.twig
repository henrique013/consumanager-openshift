{% extends "layouts/sistema/sistema.twig" %}

{% block head %}
    <link href="/templates/busca/consultas/consultas.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-xs-12">
        <h2 class="titulo text-uppercase text-center">
            <strong>buscar</strong> consultas
        </h2>
    </div>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="row">
            <form class="buscas" action="/busca/consultas">
                <div class="col-xs-12 col-md-offset-2 col-md-8">
                    <div class="form-group col-xs-12 col-sm-4">
                        <select required name="tp_busca" id="ipt-tp-busca" class="form-control" title="Tipo de Busca">

                            {% for id, label in tp_buscas %}

                                <option {{ id == tp_busca ? 'selected' : '' }} value="{{ id }}">{{ label }}</option>

                            {% endfor %}

                        </select>
                    </div>
                    <div class="form-group col-xs-12 col-sm-8">
                        <div class='input-group'>
                            <input name="valor" type="text" class="form-control" value="{{ busca }}" placeholder="BUSCA">
                            <span class="input-group-addon btn-busca">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="row">
            <div class="col-xs-12 box-table">
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Paciente</th>
                        <th>N° de Prontuário</th>
                        <th>Aluno</th>
                        <th>Data</th>
                        <th>Hora</th>
                        <th>Consultório</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for consulta in consultas %}

                        <tr data-url="/ajax/cadastro/consulta/consultorio/{{ consulta.co_id }}/{{ consulta.data|date('Y-m-d') }}/{{ consulta.horas|replace({':' : '-'}) }}">
                            <td>{{ consulta.pac_nome }}</td>
                            <td>{{ consulta.pac_prontuario }}</td>
                            <td>{{ consulta.resp_nome }}</td>
                            <td>{{ consulta.data|date('d/m/Y') }}</td>
                            <td>{{ consulta.horas }}</td>
                            <td>{{ consulta.co_nome }}</td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
    <script src="/templates/busca/consultas/consultas.js"></script>
{% endblock %}