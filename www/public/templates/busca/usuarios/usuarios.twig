{% extends "layouts/sistema/sistema.twig" %}


{% block head %}
    <link href="/templates/busca/usuarios/usuarios.css" rel="stylesheet">
{% endblock %}


{% block footer %}
    <script src="/templates/busca/usuarios/usuarios.js"></script>
{% endblock %}


{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <h2 class="titulo text-uppercase text-center">
                <strong>buscar</strong> usuários
            </h2>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-sm-offset-2">
            <div class="row">
                <form class="buscas" action="/busca/usuarios">
                    <div id="crt-nome" class="form-group col-xs-12 col-md-offset-3 col-md-6">
                        <div class='input-group'>
                            <input required name="nome" type="text" class="form-control" id="ipt-pac-nome" title="" placeholder="NOME DO USUÁRIO">
                            <span class="input-group-addon btn-busca">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Nome</th>
                            <th>E-mail</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for usuario in usuarios %}

                            <tr data-url="/cadastro/usuario/{{ usuario.id }}">
                                <td>{{ usuario.nome }}</td>
                                <td>{{ usuario.email }}</td>
                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}