<div class="row">
    <div class="col-xs-12">
        <h2 class="titulo text-uppercase text-center">
            <strong>buscar</strong> consultas
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="row">
            <form class="buscas" action="/busca/consultas">
                <div id="crt-nome" class="form-group col-xs-12 col-md-offset-3 col-md-6">
                    <div class='input-group'>
                        <input required name="nome" type="text" class="form-control" id="ipt-pac-nome" title="" placeholder="NOME DO PACIENTE">
                        <span class="input-group-addon btn-busca">
                            <i class="fa fa-search" aria-hidden="true"></i>
                        </span>
                    </div>
                </div>
            </form>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Paciente</th>
                        <th>Data</th>
                        <th>Hora</th>
                        <th class="hidden-xs">Consult√≥rio</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for consulta in consultas %}

                        <tr data-url="/ajax/cadastro/consulta/consultorio/{{ consulta.co_id }}/{{ consulta.data|date('Y-m-d') }}/{{ consulta.horas|replace({':' : '-'}) }}">
                            <td>{{ consulta.pac_nome }}</td>
                            <td>{{ consulta.data|date('d/m/Y') }}</td>
                            <td>{{ consulta.horas }}</td>
                            <td class="hidden-xs">{{ consulta.co_nome }}</td>
                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="/templates/busca/consultas/consultas.js"></script>