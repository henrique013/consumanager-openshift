{% extends "layouts/sistema/sistema.twig" %}


{% block head %}
    <link href="/bower/bootcards/dist/css/bootcards-desktop.min.css" rel="stylesheet">
    <link href="/templates/agenda/agenda.css" rel="stylesheet">
{% endblock %}


{% block footer %}
    <script src="/templates/agenda/agenda.js"></script>
{% endblock %}


{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-9">
            <h2 class="titulo text-uppercase">consult√≥rios</h2>
        </div>
        <div class='col-xs-12 col-sm-4 col-md-3'>
            <div class="form-group">
                <div class='input-group date'>
                    <span class="input-group-addon">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                    </span>
                    <input name="ipt-data" type='text' value="{{ data|date('d/m/Y') }}" class="form-control" title="Data"/>
                </div>
            </div>
        </div>
    </div>
    <div class="row">

        {% for resumo in resumos %}

            <div class="col-xs-12 col-sm-4 col-md-3 bootcards-cards">
                <div class="panel panel-default">
                    <div class="panel-heading clearfix">
                        <h3 class="panel-title pull-left truncate text-uppercase">{{ resumo.consultorio.nome }}</h3>
                    </div>
                    <div class="panel-body">
                        <p class="text-center">
                            {{ resumo.horarios.ocupados }}/{{ resumo.horarios.total }}
                        </p>
                    </div>
                    <div class="panel-footer">
                        <a class="btn btn-primary btn-sm pull-right text-uppercase" href="/agenda/consultorio/{{ resumo.consultorio.id }}/data/{{ data|date('Y-m-d') }}">
                            Acessar
                        </a>
                    </div>
                </div>
            </div>

        {% endfor %}

    </div>
{% endblock %}