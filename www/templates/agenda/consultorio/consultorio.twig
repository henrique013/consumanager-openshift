{% extends "layouts/sistema/sistema.twig" %}


{% block head %}
    <link href="/bower/bootcards/dist/css/bootcards-desktop.min.css" rel="stylesheet">
    <link href="/templates/agenda/consultorio/consultorio.css" rel="stylesheet">
{% endblock %}


{% block footer %}
    <script src="/templates/agenda/consultorio/consultorio.js"></script>
{% endblock %}


{% block content %}
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-9">
            <h2 class="titulo text-uppercase truncate">
                consultas
                <small> - {{ consultorio.nome }}</small>
            </h2>
        </div>
        <div class='col-xs-12 col-sm-4 col-md-3'>
            <div class="form-group">
                <div class='input-group date'>
                    <span class="input-group-addon">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                    </span>
                    <input name="ipt-data" type='text' value="{{ data|date('d/m/Y') }}" class="form-control" title="Data"/>
                </div>
            </div>
        </div>
    </div>
    <div class="row">

        {% for consulta in consultas %}

            <div class="col-xs-12 col-sm-4 col-md-3 bootcards-cards">
                <div class="panel panel-default">

                    <div class="panel-heading clearfix">
                        <h3 class="panel-title pull-left truncate text-uppercase">{{ consulta.horario }}</h3>
                    </div>

                    {% if consulta.resumo %}

                        <div class="panel-body">
                            <dl>
                                <dt>Paciente</dt>
                                <dd>{{ consulta.resumo.paciente }}</dd>
                                <dt>Aluno</dt>
                                <dd>{{ consulta.resumo.aluno }}</dd>
                            </dl>
                        </div>
                        <div class="panel-footer">
                            <a class="btn btn-primary btn-sm pull-right text-uppercase" href="">
                                <i class="fa fa-pencil" aria-hidden="true"></i> Editar
                            </a>
                        </div>

                    {% else %}

                        <div class="panel-body"></div>
                        <div class="panel-footer">
                            <a class="btn btn-default btn-sm pull-right text-uppercase" href="">
                                <i class="fa fa-plus" aria-hidden="true"></i> Nova
                            </a>
                        </div>

                    {% endif %}

                </div>
            </div>

        {% endfor %}

    </div>
{% endblock %}